<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #323437; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MultiPlayerGameController">

   <!-- Header Section -->
   <HBox alignment="CENTER" spacing="20">
      <Label fx:id="titleLabel" style="-fx-text-fill: #e2b714; -fx-font-size: 24px; -fx-font-family: 'Roboto Mono'; -fx-font-weight: bold;" text="TypeRacer MultiPlayer" />
   </HBox>

   <!-- Main Content Area -->
   <VBox alignment="TOP_CENTER" prefWidth="760.0" spacing="15" style="-fx-background-color: #2c2e31; -fx-padding: 20; -fx-border-radius: 5; -fx-background-radius: 5;">

      <!-- Stats Bar -->
      <HBox alignment="CENTER_LEFT" spacing="30">
         <Label style="-fx-text-fill: #d1d0c5; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="time:" />
         <Label fx:id="timeLabel" style="-fx-text-fill: #e2b714; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="0.00s" />

         <Label style="-fx-text-fill: #d1d0c5; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="wpm:" />
         <Label fx:id="wpmLabel" style="-fx-text-fill: #e2b714; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="0" />

         <Label style="-fx-text-fill: #d1d0c5; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="accuracy:" />
         <Label fx:id="accuracyLabel" style="-fx-text-fill: #e2b714; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="0%" />
      </HBox>
      <VBox fx:id="progressBarsContainer" spacing="5" />

<!--      &lt;!&ndash; Progress Bar &ndash;&gt;-->
<!--      <ProgressBar fx:id="progressBar" prefWidth="1000" progress="0.0" style="-fx-accent: #e2b714; -fx-background-color: #3a3d42;" />-->

      <!-- Paragraph Display -->
      <TextFlow fx:id="paragraphFlow" prefHeight="89.0" prefWidth="720.0" style="-fx-background-color: #2c2e31; -fx-padding: 15; -fx-font-family: 'Roboto Mono'; -fx-font-size: 22px; -fx-line-spacing: 10;" />

      <!-- Typing Input -->
      <TextField fx:id="typingField" prefWidth="720.0" promptText="click here or press enter to start" style="-fx-font-family: 'Roboto Mono'; -fx-font-size: 22px; -fx-text-fill: #d1d0c5; -fx-background-color: #2c2e31; -fx-border-color: #e2b714; -fx-border-width: 0 0 2 0; -fx-prompt-text-fill: #646669;" />
   </VBox>

   <!-- Bottom Section -->
   <HBox alignment="CENTER" spacing="30">
      <!-- Player Name Input -->
      <HBox alignment="CENTER_LEFT" spacing="10">
         <Label style="-fx-text-fill: #d1d0c5; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="name:" />
         <Label fx:id="playerNameLabel" prefHeight="36.0" prefWidth="139.0" textFill="WHITE" />
      </HBox>
      <Label fx:id="timerLabel" prefHeight="59.0" prefWidth="131.0" textFill="WHITE" />

      <!-- Leaderboard -->
      <VBox alignment="CENTER_LEFT" spacing="5">
         <Label style="-fx-text-fill: #d1d0c5; -fx-font-family: 'Roboto Mono'; -fx-font-size: 14px;" text="leaderboard" />
         <ListView fx:id="leaderboardList" prefHeight="150" prefWidth="300" style="-fx-font-family: 'Roboto Mono'; -fx-background-color: #2c2e31; -fx-text-fill: #d1d0c5; -fx-border-color: #646669;" />
      </VBox>
   </HBox>
   <Label fx:id="escText" alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="217.0" text="Press esc to go back to main menu" />
</VBox>
