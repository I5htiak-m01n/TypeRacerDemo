<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.MainMenuController"
            prefWidth="600" prefHeight="400"
            stylesheets="@../css/style.css">

   <VBox spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" alignment="CENTER">
      <Text text="Type Racer" textAlignment="CENTER" styleClass="title-text" style="-fx-font-family: 'JetBrains Mono Medium';">
         <font>
            <Font size="40.0" />
         </font>
      </Text>

      <VBox spacing="10" alignment="CENTER">
         <Button text="Multiplayer" styleClass="menu-button"/>
         <Button fx:id="singlePlayerButton" onAction="#onSinglePlayerClick" text="Singleplayer" styleClass="menu-button"/>
         <Button fx:id="exitButton" onAction="#onExitClick" text="Exit" styleClass="menu-button"/>
      </VBox>
   </VBox>

</AnchorPane>
