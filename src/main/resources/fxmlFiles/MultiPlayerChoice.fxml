<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.MultiPlayerChoiceController">
    <VBox spacing="20.0" alignment="CENTER" prefWidth="400.0" prefHeight="300.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="TypeRacer - Multiplayer" style="-fx-font-size: 24px; -fx-text-fill: #d1d0c5;" />
        <TextField fx:id="nameField" promptText="Enter your name" />
        <TextField fx:id="ipField" promptText="Enter IP (if joining)" />
        <HBox spacing="10">
            <Button text="Host Game" onAction="#handleHostGame" />
            <Button text="Join Game" onAction="#handleJoinGame" />
        </HBox>
        <Label fx:id="statusLabel" textFill="#ca4754" />
    </VBox>
</AnchorPane>
